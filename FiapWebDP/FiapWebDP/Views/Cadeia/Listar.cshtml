@model IList<Cadeia>

@{
    ViewData["Title"] = "Listar";
}

<h2>Cadeias</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text">
                        Capacidade: <b>@item.Capacidade</b><br />
                        Nível: <b>@item.Nivel</b>
                    </p>
                    <a href="#" class="btn btn-primary">Visitar</a>
                </div>
            </div>
        </div>
    }
</div>

