@model Jogo

@{
    ViewBag.Title = "Cadastre seus Jogos!";
    Layout = "_Layout";
}

<h2>Formul√°rio de cadastro de jogos</h2>

@if (TempData["msg"] != null)
{
    <span class="alert alert-info mb-5 mt-5">@TempData["msg"]</span>
}

<form asp-action="Cadastrar" asp-controller="Jogo" method="post">
    <input asp-for="Codigo"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DataLancamento"></label>
        <input asp-for="DataLancamento" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Plataforma"></label>
        <select asp-for="Plataforma" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Plataforma))">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Cadastrar</button>
    </div>
    
</form>
